<header class="header header-sticky mb-4 shadow-sm">
    <div class="container-fluid">
        <button class="header-toggler" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
            <i class="cil-hamburger-menu"></i>
        </button>
        <a class="header-brand" href="#"></a>
        <ul class="header-nav d-md-flex">
            <li class="nav-item">
                <div class="search position-relative">
                    <input class="form-control form-control-sm pe-4" type="text" placeholder="Search" />
                    <i class="fa-solid fa-search position-absolute small opacity-50" style="right: 0.5rem; top: 0.5rem"></i>
                </div>
            </li>
        </ul>
        <ul class="header-nav ms-auto">
            <li class="nav-item dropdown">
                <a class="nav-link py-0 position-relative overflow-visible" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="icon icon-lg cil-bell"></i>
                    <div class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        14
                        <div class="visually-hidden">unread messages</div>
                    </div>
                </a>
                <div class="dropdown-menu dropdown-menu-end pt-0">
                    <div class="dropdown-header bg-light">
                        <span class="fw-semibold">Notifications</span>
                        <hr class="my-2" />
                    </div>
                    <a class="dropdown-item" href="#">
                        <div class="row gap-2">
                            <div class="col-1">
                                <div class="avatar">
                                    <img class="avatar-img" src="~/Content/assets/avatars/user2.PNG" alt="" />
                                </div>
                            </div>
                            <div class="col-9">
                                <small>
                                    Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                                    <p class="small fw-bold">Today at 7:10 PM</p>
                                </small>
                            </div>
                        </div>
                    </a>
                    <a class="dropdown-item" href="#">
                        <div class="row gap-2">
                            <div class="col-1">
                                <div class="avatar">
                                    <img class="avatar-img" src="~/Content/assets/avatars/user5.PNG" alt="" />
                                </div>
                            </div>
                            <div class="col-9">
                                <small>
                                    Lorem ipsum dolor sit amet.
                                    <p class="small fw-bold">Yesterday at 10:00 AM</p>
                                </small>
                            </div>
                        </div>
                    </a>
                    <a class="dropdown-item" href="#">
                        <div class="row gap-2">
                            <div class="col-1">
                                <div class="avatar">
                                    <img class="avatar-img" src="~/Content/assets/avatars/user4.PNG" alt="" />
                                </div>
                            </div>
                            <div class="col-9">
                                <small>
                                    Lorem, ipsum dolor sit amet consectetur elit.
                                    <p class="small fw-bold">Today at 12:45 AM</p>
                                </small>
                            </div>
                        </div>
                    </a>
                </div>
            </li>
            <li class="nav-item mx-3">
                <a class="nav-link py-0 position-relative overflow-visible" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="icon icon-lg cil-inbox"></i>
                    <div class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        99+
                        <div class="visually-hidden">unread messages</div>
                    </div>
                </a>
            </li>
        </ul>
        <ul class="header-nav ms-3">
            <li class="nav-item dropdown">
                <a class="nav-link py-0" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <div class="avatar">
                        <img class="avatar-img" src="~/Content/assets/avatars/user1.PNG" alt="" />
                    </div>
                    <span>Bruno Nash</span>
                </a>
                <div class="dropdown-menu dropdown-menu-end pt-0">
                    <div class="dropdown-header bg-light py-2">
                        <div class="fw-semibold">Account</div>
                    </div>
                    <a class="dropdown-item small" href="#"> Updates</a>
                    <a class="dropdown-item small" href="#"> Messages</a>
                    <a class="dropdown-item small" href="#"> Tasks<span class="badge bg-danger rounded-pill ms-2">30</span></a>
                    <a class="dropdown-item small" href="#"> Comments<span class="badge bg-success rounded-pill ms-2">9</span></a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item small" href="#"> Lock Account</a>
                    <a class="dropdown-item small" href="#"> Logout</a>
                </div>
            </li>
        </ul>
    </div>
    <div class="header-divider"></div>
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0 ms-2">
                <li class="breadcrumb-item small">@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()</li>
                <li class="breadcrumb-item active small">@HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString()</li>
            </ol>
        </nav>
    </div>
</header>
